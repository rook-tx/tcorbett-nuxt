
@import "_variables"

.header
  left 0
  pointer-events none
  top 0
  pad(0, .5)
  position fixed
  width 100%
  z-index 2

  &-logo
    display block
    height 21px
    width 21px

    +below($mobile)
      margin-top -2px
      margin-left -4px
      vertical-align top

    &-path
      &-left, &-right
        transition fill .8s $fade-in

        .loading &
          fill $nw

      &-left
        fill lighten($prpl,34%)

      &-right
        fill $prpl

  &-wrap
    align-items flex-end
    display flex

    &::before, &::after
      content none

