@import '_variables'

div, section, main, header,
a, p, li
  box-sizing border-box

html, body
  margin 0
  min-height 100%

html
  background $bg
  color $blk
  font-family $merriweather
  font-weight 300
  font-size (17 / 16) * 100%
  text-size-adjust 100%
  -webkit-tap-highlight-color transparent

  +above($tablet)
    font-size ($p / 16) * 100%

body
  font-size 100%
  line-height $let * 2

@import '_global'
@import '_typog'

@import '_header'
@import '_layout'
@import '_footer'
