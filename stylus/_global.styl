// ----------
// Global
// ----------

html, body, #__nuxt, .app
  height 100%
  // overflow hidden

a
  color inherit
  text-decoration none

img, svg
  display block
  height auto
  max-width 100%

ul, ol
  list-style none
  margin 0
  padding 0

button
  appearance none
  background 0
  border 0 
  padding 0
  margin 0
  outline 0
  font inherit

// ----------
// Skip
// ----------

.skip-to
  left 0
  position absolute
  opacity 0
  top 0

  &:focus
    opacity 1

.cf
	&::before, &::after
		content ' '
		display block

	&::after
		clear both
    