// ----------
// Core type
// ----------

h1, h3
	font-family $lato
	font-weight 300

	strong
		font-weight 400

h1
	color $prpl
	fs(mp(5))
	letter-spacing -.02em
	mgn(2,0)

	span
		background-image -webkit-linear-gradient(315deg, $prpl, $blu)
		color $prpl
		display inline-block
		-webkit-background-clip text
		-webkit-text-fill-color transparent

	+above($tablet)
		&.title
			.body-home &
				mgn(8,0,4)

	+above($tablet)
		fs(mp(8))
		mgn(4,0)

		&.title
			.body-home &
				mgn(8,0,4)

	+above($laptop)
		fs(mp(9))

h2
	font-family $merriweather
	fs(mp(3))
	font-weight: 300
	mgn(4,0,2)

	+above($tablet)
		mgn(5,0,4)

h3
	fs(mp(2))
	mgn(4,0)

	.cta
		background-image -webkit-linear-gradient(135deg, $blu, $prpl)
		color $prpl
		font-weight 400
		display inline-block
		-webkit-background-clip text
		-webkit-text-fill-color transparent

h4
	fs(mp(1))
	mgn(1,0)

h5
	color $bgry
	fs($p)
	font-weight 400
	letter-spacing .1em
	mgn(1, 0, 3)
	text-align right
	text-transform uppercase

h6
	color $bgry
	font-family $lato
	fs(mp(-2))
	font-weight 400
	letter-spacing .2em
	text-transform uppercase

p
	mgn(2, 0)

h1, h2, h3, h4, h5, p
	max-width $pwidth*1em


// ----------
// Modifers
// ----------

strong, b
	font-weight 700
	letter-spacing normal

em, i
	font-style italic

sup
	font-size smaller
	vertical-align top
