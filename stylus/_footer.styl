@import "_variables"

.footer
	&-wrap
		display flex
		padding-right 0

		+below($mobile)
			pad(0, .5)

.fnav
	&, &-ul
		width 100%

	&-ul
		overflow-x auto
		overflow-y hidden
		white-space nowrap
		z-index 1

	.mnav-a, + .credit
		font-weight 400
		margin 0
		pad(.5, .75, .75)

	+below($mobile)
		&-ul
			display block
			overflow-x scroll
			padding-right $gut*1em

			.mnav-a, + .credit
				background 0
				pad(.5, .5)

	.mnav-a
		color $nblk

		+above($mobile)
			&:hover, &:focus, &:active
				background $hw
				color $nblk

	.mnav-linkedin
		.mnav-a
			color $blu

	.mnav-unclear
		.mnav-a
			color $prpl

.credit
	color $bdr
	font-family $lato
	margin-left auto
	white-space nowrap

	strong
		letter-spacing inherit

	+below($mobile)
		display none
